<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:padding="5dp"
        android:layout_height="@dimen/novel_item_height"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_kind_item_thumb"
            android:layout_marginLeft="5dp"
            android:layout_width="@dimen/thumb_width"
            android:layout_height="@dimen/thumb_height"
            android:src="@drawable/default_cover" />

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_kind_item_name"
                    style="@style/novelNameStyle"
                    android:text="无限恐怖"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
            
            <LinearLayout 
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">

             <TextView
                    android:id="@+id/tv_kind_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="作者：张三"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/unread_text_size" />
             
             </LinearLayout>
                            
            <TextView
                android:id="@+id/tv_kind_item_brief"
                android:layout_marginTop="5dp"
                style="@style/novelItemTextStyle"
                android:text="第一张 黑河"
                android:lines="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
